<div class="h-12"></div>

<script>
  // Header scroll effect
  window.addEventListener('scroll', () => {
    const header = document.querySelector('header');
    if (window.scrollY > 10) {
      header.classList.add('bg-white', 'shadow-md');
      header.classList.remove('bg-[#0F172A]');
    } else {
      header.classList.remove('bg-white', 'shadow-md');
      header.classList.add('bg-[#0F172A]');
    }
  });

  // Search dropdown functionality
  document.addEventListener('turbo:load', () => {
    const searchInput = document.getElementById('search-input');
    const searchDropdown = document.getElementById('search-dropdown');
    const searchCategories = document.querySelectorAll('.search-category');
    
    // Mobile search elements
    const mobileSearchBtn = document.getElementById('mobile-search-btn');
    const mobileSearchModal = document.getElementById('mobile-search-modal');
    const closeMobileSearch = document.getElementById('close-mobile-search');
    const mobileSearchInput = document.getElementById('mobile-search-input');
    const mobileSearchCategories = document.querySelectorAll('.mobile-search-category');
    
    let selectedCategory = null;
    let mobileSelectedCategory = null;

    // Populate search input with query parameter if it exists
    const urlParams = new URLSearchParams(window.location.search);
    const queryParam = urlParams.get('query');
    if (queryParam && searchInput) {
      searchInput.value = queryParam;
    }
    if (queryParam && mobileSearchInput) {
      mobileSearchInput.value = queryParam;
    }

    // Show dropdown on input focus
    searchInput.addEventListener('focus', () => {
      searchDropdown.classList.remove('hidden');
    });

    // Hide dropdown when clicking outside
    document.addEventListener('click', (e) => {
      if (!document.getElementById('search-container').contains(e.target)) {
        searchDropdown.classList.add('hidden');
      }
    });

    // Handle category selection
    searchCategories.forEach(category => {
      category.addEventListener('click', () => {
        selectedCategory = category.dataset.category;
        const categoryName = category.querySelector('.text-gray-200').textContent;
        
        // Update input placeholder
        searchInput.placeholder = `Search ${categoryName.toLowerCase()}...`;
        
        // Visual feedback for selected category
        searchCategories.forEach(cat => cat.classList.remove('bg-yellow-500/20'));
        category.classList.add('bg-yellow-500/20');
        
        // Focus back to input
        searchInput.focus();
      });
    });

    // Handle search input
    searchInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        const query = searchInput.value.trim();
        if (query && selectedCategory) {
          performSearch(selectedCategory, query);
        } else if (query) {
          // If no category selected, show dropdown
          searchDropdown.classList.remove('hidden');
        }
      }
    });

    // Perform search based on category
    function performSearch(category, query) {
      let searchType = '';
      
      switch(category) {
        case 'blocks':
          searchType = 'blocks';
          break;
        case 'transactions':
          searchType = 'transactions';
          break;
        case 'addresses':
          searchType = 'addresses';
          break;
        case 'smart-contracts':
          searchType = 'smart_contracts';
          break;
        case 'tokens':
          searchType = 'tokens';
          break;
      }
      
      if (searchType) {
        // Use Turbo to navigate to search page
        const searchUrl = `/app/ethereum/${searchType}/search?query=${encodeURIComponent(query)}`;
        Turbo.visit(searchUrl);
        
        // Hide dropdown and clear input
        searchDropdown.classList.add('hidden');
        searchInput.value = '';
        searchInput.placeholder = 'Search blocks, transactions, addresses, smart contracts and tokens';
        
        // Reset category selection
        searchCategories.forEach(cat => cat.classList.remove('bg-yellow-500/20'));
        selectedCategory = null;
      }
    }

    // Show search suggestions on input
    searchInput.addEventListener('input', (e) => {
      const query = e.target.value.trim();
      if (query.length > 0) {
        searchDropdown.classList.remove('hidden');
      }
    });

    // Mobile search functionality
    if (mobileSearchBtn) {
      mobileSearchBtn.addEventListener('click', () => {
        mobileSearchModal.classList.remove('hidden');
        setTimeout(() => mobileSearchInput.focus(), 100);
      });
    }

    if (closeMobileSearch) {
      closeMobileSearch.addEventListener('click', () => {
        mobileSearchModal.classList.add('hidden');
        mobileSearchInput.value = '';
        mobileSelectedCategory = null;
        mobileSearchCategories.forEach(cat => cat.classList.remove('bg-yellow-500/20'));
      });
    }

    // Close mobile modal on backdrop click
    if (mobileSearchModal) {
      mobileSearchModal.addEventListener('click', (e) => {
        if (e.target === mobileSearchModal) {
          mobileSearchModal.classList.add('hidden');
          mobileSearchInput.value = '';
          mobileSelectedCategory = null;
          mobileSearchCategories.forEach(cat => cat.classList.remove('bg-yellow-500/20'));
        }
      });
    }

    // Handle mobile category selection
    mobileSearchCategories.forEach(category => {
      category.addEventListener('click', () => {
        const query = mobileSearchInput.value.trim();
        if (query) {
          // Perform search immediately if there's a query
          performSearch(category.dataset.category, query);
          mobileSearchModal.classList.add('hidden');
          mobileSearchInput.value = '';
          mobileSelectedCategory = null;
          mobileSearchCategories.forEach(cat => cat.classList.remove('bg-yellow-500/20'));
        } else {
          // Just select the category
          mobileSelectedCategory = category.dataset.category;
          const categoryName = category.querySelector('.text-gray-200').textContent;
          
          // Update input placeholder
          mobileSearchInput.placeholder = `Search ${categoryName.toLowerCase()}...`;
          
          // Visual feedback for selected category
          mobileSearchCategories.forEach(cat => cat.classList.remove('bg-yellow-500/20'));
          category.classList.add('bg-yellow-500/20');
          
          // Focus back to input
          mobileSearchInput.focus();
        }
      });
    });

    // Handle mobile search input
    if (mobileSearchInput) {
      mobileSearchInput.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') {
          const query = mobileSearchInput.value.trim();
          if (query && mobileSelectedCategory) {
            performSearch(mobileSelectedCategory, query);
            mobileSearchModal.classList.add('hidden');
            mobileSearchInput.value = '';
            mobileSelectedCategory = null;
            mobileSearchCategories.forEach(cat => cat.classList.remove('bg-yellow-500/20'));
          }
        }
      });
    }
  });
</script>