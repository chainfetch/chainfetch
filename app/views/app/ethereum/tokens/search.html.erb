<div class="min-h-screen bg-[#0F172A]">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-6">
      <div class="inline-block mb-6 px-4 py-2 bg-yellow-500/10 rounded-full border border-yellow-500/20">
        <span class="text-yellow-400 font-semibold">Search Results</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight bg-clip-text text-transparent bg-gradient-to-r from-white via-yellow-100 to-white">
        Tokens
      </h1>
      <% if @results && @results[:count] %>
        <p class="text-xl text-gray-300 mb-8">
          Found <%= @results[:count] %> token<%= @results[:count] != 1 ? 's' : '' %>
        </p>
      <% end %>
    </div>

    <% if @results && @results[:api_endpoint] %>
      <div class="mb-8 bg-[#1E293B]/80 backdrop-blur-sm rounded-lg border border-yellow-500/20 shadow-[0_0_30px_rgba(234,179,8,0.1)] overflow-hidden">
        <div class="px-6 py-4">
          <div class="flex items-center justify-between mb-3">
            <h3 class="text-lg font-semibold text-yellow-500 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
              </svg>
              API Endpoint
            </h3>
            <button class="text-yellow-400 hover:text-yellow-300 transition-colors" onclick="copyToClipboard('<%= @results[:api_endpoint] %>')">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </button>
          </div>
          <div class="bg-[#0F172A] rounded-lg p-4 border border-gray-800">
            <code class="text-yellow-300 text-sm font-mono break-all leading-relaxed">
              <%= @results[:api_endpoint] %>
            </code>
          </div>
        </div>
      </div>
    <% end %>

    <% if @results && @results[:tokens] && @results[:tokens].any? %>
      <div class="grid gap-6">
        <% @results[:tokens].each do |token| %>
          <%= render 'token', token: token %>
        <% end %>
      </div>

      <% if @results[:parameters_used] %>
        <div class="mt-8 bg-[#1E293B]/80 backdrop-blur-sm rounded-lg p-6 border border-yellow-500/20 shadow-[0_0_30px_rgba(234,179,8,0.1)]">
          <h3 class="font-semibold text-yellow-500 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
            </svg>
            Search Parameters Used
          </h3>
          <div class="flex flex-wrap gap-3">
            <% @results[:parameters_used].each do |key, value| %>
              <span class="inline-flex items-center bg-gradient-to-r from-yellow-500/20 to-red-500/20 border border-yellow-500/30 text-yellow-300 rounded-full px-4 py-2 text-sm font-medium">
                <span class="font-semibold"><%= key.to_s.humanize %>:</span>
                <span class="ml-2 text-white"><%= value %></span>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <div class="bg-[#1E293B]/80 backdrop-blur-sm rounded-lg p-8 border border-yellow-500/20 shadow-[0_0_30px_rgba(234,179,8,0.1)]">
          <svg class="mx-auto h-16 w-16 mb-4 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="text-xl font-semibold text-white mb-3">No tokens found</h3>
          <p class="text-gray-300">Try adjusting your search parameters to find relevant tokens.</p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
function copyToClipboard(text) {
  navigator.clipboard.writeText(text).then(function() {
    // Show a temporary success message
    const button = event.target.closest('button');
    const originalHTML = button.innerHTML;
    button.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>';
    setTimeout(() => {
      button.innerHTML = originalHTML;
    }, 2000);
  });
}
</script>