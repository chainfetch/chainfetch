<div id="address_summary_<%= address_hash %>" data-controller="address" class="bg-[#1E293B]/80 backdrop-blur-sm rounded-lg p-6 text-white border border-yellow-500/20 shadow-[0_0_30px_rgba(234,179,8,0.1)] hover:transform hover:translate-y-[-4px] transition-all duration-300">
  <div class="flex flex-col lg:flex-row lg:justify-between lg:items-start mb-6">
    <div class="flex-1">
      <div class="flex items-center mb-4 justify-between">
        <h2 class="text-2xl font-bold text-white mb-4">
          Address <%= address_hash[0..5] %>...<%=  address_hash[-4..-1] %> - AI Summary
        </h2>
        <button 
          data-action="click->address#toggleDetail"
          data-address-hash="<%= address_hash %>"
          class="bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center gap-2 cursor-pointer">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          View Details
        </button>
      </div>
    </div>
  </div>

  <div class="bg-gradient-to-br from-indigo-900/30 to-purple-900/30 rounded-lg p-6 border border-indigo-500/30">
    <div class="flex items-center mb-4">
      <div class="bg-gradient-to-r from-yellow-500 to-amber-600 rounded-full p-2 mr-3">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-yellow-400">AI-Generated Insights</h3>
    </div>
    
    <% if summary.present? %>
      <div class="text-gray-300 leading-relaxed space-y-4">
        <%= simple_format(summary, {}, wrapper_tag: "div", class: "whitespace-pre-wrap") %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-yellow-400 mx-auto mb-4"></div>
        <p class="text-gray-400">Generating AI summary...</p>
        <p class="text-gray-500 text-sm mt-2">This may take a few moments for newly indexed addresses</p>
      </div>
    <% end %>
  </div>
</div>