<div id="address_<%= address.is_a?(Hash) ? (address['address_hash'] || address.dig('data', 'info', 'hash')) : address %>" data-controller="address" class="bg-[#1E293B]/80 backdrop-blur-sm rounded-lg p-6 text-white border border-yellow-500/20 shadow-[0_0_30px_rgba(234,179,8,0.1)] hover:transform hover:translate-y-[-4px] transition-all duration-300">
  <div class="flex flex-col lg:flex-row lg:justify-between lg:items-start mb-6">
    <div class="flex-1">
      <div class="flex items-center mb-4 justify-between">
        <h2 class="text-2xl font-bold text-white mb-4">
          <% is_contract = address.is_a?(Hash) ? (address.dig('data', 'info', 'is_contract') || address['is_contract']) : nil %>
          <%= is_contract ? 'Smart Contract' : 'Ethereum Address' %>
        </h2>
        <button 
          data-action="click->address#toggleSummary"
          data-address-hash="<%= address.is_a?(Hash) ? (address['address_hash'] || address.dig('data', 'info', 'hash')) : address %>"
          class="bg-gradient-to-r from-yellow-500 to-amber-600 hover:from-yellow-600 hover:to-amber-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center gap-2 cursor-pointer">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          AI Summary
        </button>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 text-sm">
        <div>
          <span class="font-semibold text-yellow-400">Hash:</span>
          <p class="text-gray-300 font-mono text-xs break-keep whitespace-nowrap overflow-hidden mt-1">
            <%= address.is_a?(Hash) ? (address.dig('data', 'info', 'hash') || address['hash']) : 'N/A' %>
          </p>
        </div>
        <div>
          <span class="font-semibold text-yellow-400">Type:</span>
          <p class="text-gray-300 mt-1">
            <%= is_contract ? 'Smart Contract' : 'EOA (Externally Owned Account)' %>
          </p>
        </div>
        <div>
          <span class="font-semibold text-yellow-400">ENS Name:</span>
          <p class="text-gray-300 font-mono text-xs break-keep whitespace-nowrap overflow-hidden mt-1">
            <% ens_name = address.is_a?(Hash) ? (address.dig('data', 'info', 'ens_domain_name') || address.dig('ens_domain_name')) : nil %>
            <%= ens_name || 'None' %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-6 gap-4 mb-6">
    <div class="bg-gradient-to-br from-blue-600/20 to-blue-800/20 rounded-lg p-4 border border-blue-500/30">
      <div class="text-xs font-medium text-blue-400 uppercase tracking-wide mb-2">
        ETH Balance
      </div>
      <div class="text-xl font-bold text-blue-300">
        <% coin_balance = address.is_a?(Hash) ? (address.dig('data', 'info', 'coin_balance') || address['coin_balance']) : nil %>
        <% if coin_balance %>
          <%= sprintf("%.4f", coin_balance.to_f / 1e18) %>
        <% else %>
          0.0000
        <% end %>
      </div>
      <div class="text-xs text-blue-400 font-medium mt-1">
        ETH
      </div>
    </div>
    
    <div class="bg-gradient-to-br from-emerald-600/20 to-emerald-800/20 rounded-lg p-4 border border-emerald-500/30">
      <div class="text-xs font-medium text-emerald-400 uppercase tracking-wide mb-2">
        Transactions
      </div>
      <div class="text-xl font-bold text-emerald-300">
        <%= address.is_a?(Hash) ? (address.dig('data', 'counters', 'transactions_count') || address.dig('counters', 'transactions_count') || 0) : 'N/A' %>
      </div>
    </div>
    
    <div class="bg-gradient-to-br from-purple-600/20 to-purple-800/20 rounded-lg p-4 border border-purple-500/30">
      <div class="text-xs font-medium text-purple-400 uppercase tracking-wide mb-2">
        Token Transfers
      </div>
      <div class="text-xl font-bold text-purple-300">
        <%= address.is_a?(Hash) ? (address.dig('data', 'counters', 'token_transfers_count') || address.dig('counters', 'token_transfers_count') || 0) : 'N/A' %>
      </div>
    </div>
    
    <div class="bg-gradient-to-br from-amber-600/20 to-amber-800/20 rounded-lg p-4 border border-amber-500/30">
      <div class="text-xs font-medium text-amber-400 uppercase tracking-wide mb-2">
        Gas Usage
      </div>
      <div class="text-xl font-bold text-amber-300">
        <% gas_usage = address.is_a?(Hash) ? (address.dig('data', 'counters', 'gas_usage_count') || address.dig('counters', 'gas_usage_count')) : nil %>
        <% if gas_usage %>
          <%= number_with_delimiter(gas_usage) %>
        <% else %>
          0
        <% end %>
      </div>
    </div>
    
    <div class="bg-gradient-to-br from-indigo-600/20 to-indigo-800/20 rounded-lg p-4 border border-indigo-500/30">
      <div class="text-xs font-medium text-indigo-400 uppercase tracking-wide mb-2">
        Token Holdings
      </div>
      <div class="text-xl font-bold text-indigo-300">
        <% token_count = address.is_a?(Hash) && address.dig('data', 'tokens', 'items') ? address.dig('data', 'tokens', 'items').length : 0 %>
        <%= token_count %>
      </div>
      <div class="text-xs text-indigo-400 font-medium mt-1">
        tokens
      </div>
    </div>
    
    <div class="bg-gradient-to-br from-pink-600/20 to-pink-800/20 rounded-lg p-4 border border-pink-500/30">
      <div class="text-xs font-medium text-pink-400 uppercase tracking-wide mb-2">
        Status
      </div>
      <div class="text-xl font-bold text-pink-300">
        <% is_verified = address.is_a?(Hash) ? (address.dig('data', 'info', 'is_verified') || address['is_verified']) : nil %>
        <% is_scam = address.is_a?(Hash) ? (address.dig('data', 'info', 'is_scam') || address['is_scam']) : nil %>
        <% if is_scam %>
          ⚠️ SCAM
        <% elsif is_verified %>
          ✅ Verified
        <% else %>
          Unverified
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
    <div>
      <span class="font-semibold text-yellow-400">Exchange Rate:</span>
      <span class="text-gray-300 ml-2">
        <% exchange_rate = address.is_a?(Hash) ? (address.dig('data', 'info', 'exchange_rate') || address['exchange_rate']) : nil %>
        <% if exchange_rate %>
          $<%= number_with_delimiter(exchange_rate) %>
        <% else %>
          N/A
        <% end %>
      </span>
    </div>
    
    <div>
      <span class="font-semibold text-yellow-400">Has Token Transfers:</span>
      <span class="text-gray-300 ml-2">
        <% has_token_transfers = address.is_a?(Hash) ? (address.dig('data', 'info', 'has_token_transfers') || address['has_token_transfers']) : nil %>
        <%= has_token_transfers ? 'Yes' : 'No' %>
      </span>
    </div>
    
    <div>
      <span class="font-semibold text-yellow-400">Has Tokens:</span>
      <span class="text-gray-300 ml-2">
        <% has_tokens = address.is_a?(Hash) ? (address.dig('data', 'info', 'has_tokens') || address['has_tokens']) : nil %>
        <%= has_tokens ? 'Yes' : 'No' %>
      </span>
    </div>
    
    <div>
      <span class="font-semibold text-yellow-400">Has Logs:</span>
      <span class="text-gray-300 ml-2">
        <% has_logs = address.is_a?(Hash) ? (address.dig('data', 'info', 'has_logs') || address['has_logs']) : nil %>
        <%= has_logs ? 'Yes' : 'No' %>
      </span>
    </div>
  </div>

  <!-- Public Tags Section -->
  <% if address.is_a?(Hash) && address.dig('data', 'info', 'public_tags')&.any? %>
    <div class="mt-6">
      <span class="font-semibold text-yellow-400">Public Tags:</span>
      <div class="flex flex-wrap gap-2 mt-2">
        <% address.dig('data', 'info', 'public_tags').each do |tag| %>
          <span class="inline-flex items-center bg-gradient-to-r from-blue-500/20 to-purple-500/20 border border-blue-500/30 text-blue-300 rounded-full px-3 py-1 text-xs font-medium">
            <%= tag %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Token Holdings - Enhanced Display -->
  <% if address.is_a?(Hash) && address.dig('data', 'tokens', 'items')&.any? %>
    <div class="mt-6">
      <div class="bg-gradient-to-br from-indigo-900/30 to-purple-900/30 rounded-lg border border-indigo-500/30 overflow-hidden">
        <div class="bg-gradient-to-r from-yellow-500/20 to-amber-500/20 p-6 border-b border-yellow-400/20">
          <h3 class="text-xl font-bold text-yellow-400 flex items-center gap-3">
            <div class="w-8 h-8 bg-gradient-to-br from-yellow-500 to-amber-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            DeFi Token Portfolio (<%= address.dig('data', 'tokens', 'items').length %> tokens)
          </h3>
        </div>
        <div class="p-6 bg-[#0F172A]/50">
          <div class="max-h-96 overflow-y-auto">
            <div class="space-y-4 pr-2">
              <% address.dig('data', 'tokens', 'items').each_with_index do |token_holding, index| %>
                <% token = token_holding['token'] %>
                <div class="flex items-center justify-between p-4 bg-[#1E293B]/60 rounded-xl border border-yellow-500/10 hover:border-yellow-400/30 transition-all duration-200">
                  <div class="flex items-center gap-4">
                    <div class="relative">
                      <% if token['icon_url'].present? %>
                        <img src="<%= token['icon_url'] %>" alt="<%= token['symbol'] %>" class="w-12 h-12 rounded-full border-2 border-yellow-400/30">
                      <% else %>
                        <div class="w-12 h-12 bg-gradient-to-br from-yellow-500 to-amber-600 rounded-full flex items-center justify-center border-2 border-yellow-400/30">
                          <span class="text-white text-sm font-bold"><%= token['symbol']&.first %></span>
                        </div>
                      <% end %>
                      <div class="absolute -bottom-1 -right-1 w-6 h-6 bg-[#1E293B] rounded-full flex items-center justify-center border-2 border-yellow-500/30">
                        <span class="text-xs text-yellow-400 font-semibold">#<%= index + 1 %></span>
                      </div>
                    </div>
                    <div>
                      <p class="text-white font-semibold text-lg"><%= token['name'] %></p>
                      <div class="flex items-center gap-3">
                        <p class="text-yellow-300 text-sm font-medium"><%= token['symbol'] %></p>
                        <span class="inline-flex items-center bg-yellow-500/20 border border-yellow-400/30 text-yellow-200 rounded-full px-2 py-0.5 text-xs font-medium">
                          <%= token['type'] %>
                        </span>
                        <% if token['holders_count'] %>
                          <span class="inline-flex items-center bg-blue-500/20 border border-blue-400/30 text-blue-200 rounded-full px-2 py-0.5 text-xs font-medium">
                            <%= number_with_delimiter(token['holders_count']) %> holders
                          </span>
                        <% end %>
                      </div>
                    </div>
                  </div>
                  <div class="text-right">
                    <% if token['decimals'] && token_holding['value'] %>
                      <% token_amount = token_holding['value'].to_f / (10 ** token['decimals'].to_i) %>
                      <p class="text-white font-bold text-lg">
                        <%= token_amount >= 1000 ? sprintf("%.2f", token_amount) : sprintf("%.6f", token_amount) %>
                      </p>
                    <% else %>
                      <p class="text-white font-bold text-lg"><%= token_holding['value'] %></p>
                    <% end %>
                    <% if token['exchange_rate'] && token['exchange_rate'].to_f > 0 %>
                      <p class="text-yellow-300 text-sm">
                        $<%= sprintf("%.2f", token_amount * token['exchange_rate'].to_f) %>
                      </p>
                    <% else %>
                      <p class="text-gray-400 text-sm">No price data</p>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Transaction History - Enhanced -->
  <% if address.is_a?(Hash) && address.dig('data', 'transactions', 'items')&.any? %>
    <div class="mt-6">
      <div class="bg-gradient-to-br from-indigo-900/30 to-purple-900/30 rounded-lg border border-indigo-500/30 overflow-hidden">
        <div class="bg-gradient-to-r from-yellow-500/20 to-amber-500/20 p-6 border-b border-yellow-400/20">
          <h3 class="text-xl font-bold text-yellow-400 flex items-center gap-3">
            <div class="w-8 h-8 bg-gradient-to-br from-yellow-500 to-amber-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
              </svg>
            </div>
            Recent Transaction Activity
          </h3>
        </div>
        <div class="p-6 bg-[#0F172A]/50">
          <div class="space-y-4">
            <% address.dig('data', 'transactions', 'items').first(5).each do |transaction| %>
              <div class="flex items-center justify-between p-4 bg-[#1E293B]/60 rounded-xl border border-yellow-500/10 hover:border-yellow-400/30 transition-all duration-200">
                <div class="flex items-center gap-4">
                  <div class="w-10 h-10 bg-gradient-to-br from-yellow-500 to-amber-600 rounded-lg flex items-center justify-center">
                    <% if transaction['method'] %>
                      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                    <% else %>
                      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
                      </svg>
                    <% end %>
                  </div>
                  <div>
                    <p class="text-white font-mono text-sm font-semibold">
                      <%= transaction['hash'][0..15] %>...
                    </p>
                    <div class="flex items-center gap-3 mt-1">
                      <p class="text-yellow-300 text-xs">
                        <% if transaction['timestamp'] %>
                          <%= Time.parse(transaction['timestamp']).strftime("%Y-%m-%d %H:%M UTC") %>
                        <% end %>
                      </p>
                      <% if transaction['method'] %>
                        <span class="inline-flex items-center bg-blue-500/20 border border-blue-400/30 text-blue-200 rounded-full px-2 py-0.5 text-xs font-medium">
                          <%= transaction['method'] %>
                        </span>
                      <% end %>
                      <span class="inline-flex items-center bg-emerald-500/20 border border-emerald-400/30 text-emerald-200 rounded-full px-2 py-0.5 text-xs font-medium">
                        <%= transaction['status'] || 'success' %>
                      </span>
                    </div>
                  </div>
                </div>
                <div class="text-right">
                  <% if transaction['value'] && transaction['value'].to_f > 0 %>
                    <p class="text-yellow-300 font-bold text-lg">
                      <%= sprintf("%.6f", transaction['value'].to_f / 1e18) %> ETH
                    </p>
                  <% else %>
                    <p class="text-gray-400 text-sm">No ETH transfer</p>
                  <% end %>
                  <p class="text-yellow-400 text-xs">
                    Block #<%= number_with_delimiter(transaction['block_number']) %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Balance History Chart Area -->
  <% if address.is_a?(Hash) && address.dig('data', 'coin_balance_history', 'items')&.any? %>
    <div class="mt-6">
      <div class="bg-gradient-to-br from-indigo-900/30 to-purple-900/30 rounded-lg border border-indigo-500/30 overflow-hidden">
        <div class="bg-gradient-to-r from-yellow-500/20 to-amber-500/20 p-6 border-b border-yellow-400/20">
          <h3 class="text-xl font-bold text-yellow-400 flex items-center gap-3">
            <div class="w-8 h-8 bg-gradient-to-br from-yellow-500 to-amber-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            Balance History & DeFi Activity
          </h3>
        </div>
        <div class="p-6 bg-[#0F172A]/50">
          <div class="space-y-3">
            <% address.dig('data', 'coin_balance_history', 'items').first(5).each do |balance_change| %>
              <div class="flex items-center justify-between p-3 bg-[#1E293B]/60 rounded-lg border border-yellow-500/10">
                <div>
                  <p class="text-white text-sm font-mono"><%= balance_change['transaction_hash'][0..15] %>...</p>
                  <p class="text-yellow-300 text-xs">
                    <%= Time.parse(balance_change['block_timestamp']).strftime("%Y-%m-%d %H:%M UTC") %>
                  </p>
                </div>
                <div class="text-right">
                  <% delta = balance_change['delta'].to_f / 1e18 %>
                  <p class="font-semibold <%= delta >= 0 ? 'text-emerald-400' : 'text-red-400' %>">
                    <%= delta >= 0 ? '+' : '' %><%= sprintf("%.6f", delta) %> ETH
                  </p>
                  <p class="text-yellow-300 text-xs">Block #<%= balance_change['block_number'] %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- NFT Collections -->
  <% if address.is_a?(Hash) && address.dig('data', 'nft_collections', 'items')&.any? %>
    <div class="mt-6">
      <div class="bg-gradient-to-br from-indigo-900/30 to-purple-900/30 rounded-lg border border-indigo-500/30 overflow-hidden">
        <div class="bg-gradient-to-r from-yellow-500/20 to-amber-500/20 p-6 border-b border-yellow-400/20">
          <h3 class="text-xl font-bold text-yellow-400 flex items-center gap-3">
            <div class="w-8 h-8 bg-gradient-to-br from-yellow-500 to-amber-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            NFT Collections
          </h3>
        </div>
        <div class="p-6 bg-[#0F172A]/50">
          <div class="max-h-96 overflow-y-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pr-2">
              <% address.dig('data', 'nft_collections', 'items').each do |nft_collection| %>
              <% token = nft_collection['token'] %>
              <div class="p-4 bg-[#1E293B]/60 rounded-xl border border-yellow-500/10">
                <div class="flex items-center gap-3 mb-3">
                  <% if token['icon_url'].present? %>
                    <img src="<%= token['icon_url'] %>" alt="<%= token['symbol'] %>" class="w-10 h-10 rounded-lg">
                  <% else %>
                    <div class="w-10 h-10 bg-gradient-to-br from-yellow-500 to-amber-600 rounded-lg flex items-center justify-center">
                      <span class="text-white text-sm font-bold"><%= token['symbol']&.first %></span>
                    </div>
                  <% end %>
                  <div>
                    <p class="text-white font-semibold"><%= token['name'] %></p>
                    <p class="text-yellow-300 text-sm"><%= token['symbol'] %></p>
                  </div>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-yellow-200 text-sm">Amount owned:</span>
                  <span class="text-white font-semibold"><%= nft_collection['amount'] %></span>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- NFT Items Display -->
  <% if address.is_a?(Hash) && address.dig('data', 'nft', 'items')&.any? %>
    <div class="mt-6">
      <div class="bg-gradient-to-br from-indigo-900/30 to-purple-900/30 rounded-lg border border-indigo-500/30 overflow-hidden">
        <div class="bg-gradient-to-r from-yellow-500/20 to-amber-500/20 p-6 border-b border-yellow-400/20">
          <h3 class="text-xl font-bold text-yellow-400 flex items-center gap-3">
            <div class="w-8 h-8 bg-gradient-to-br from-yellow-500 to-amber-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
            </div>
            NFT Items
          </h3>
        </div>
        <div class="p-6 bg-[#0F172A]/50">
          <div class="max-h-96 overflow-y-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 pr-2">
              <% address.dig('data', 'nft', 'items').each do |nft_item| %>
              <div class="p-4 bg-[#1E293B]/60 rounded-xl border border-yellow-500/10">
                <% if nft_item['image_url'].present? %>
                  <img src="<%= nft_item['image_url'] %>" alt="NFT" class="w-full h-48 object-cover rounded-lg mb-3">
                <% else %>
                  <div class="w-full h-48 bg-gradient-to-br from-yellow-500 to-amber-600 rounded-lg mb-3 flex items-center justify-center">
                    <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                <% end %>
                <div>
                  <p class="text-white font-semibold text-sm mb-1">
                    <%= nft_item.dig('metadata', 'name') || "NFT ##{nft_item['id']}" %>
                  </p>
                  <p class="text-yellow-300 text-xs mb-2">
                    ID: <%= nft_item['id'] %>
                  </p>
                  <% if nft_item.dig('metadata', 'description') %>
                    <p class="text-gray-400 text-xs line-clamp-2">
                      <%= nft_item.dig('metadata', 'description') %>
                    </p>
                  <% end %>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>