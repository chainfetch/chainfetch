<div id="block_error_<%= block_number %>" data-controller="block" class="bg-[#1E293B]/80 backdrop-blur-sm rounded-lg p-6 text-white border border-red-500/20 shadow-[0_0_30px_rgba(239,68,68,0.1)] hover:transform hover:translate-y-[-4px] transition-all duration-300">
  <div class="flex flex-col lg:flex-row lg:justify-between lg:items-start mb-6">
    <div class="flex-1">
      <div class="flex items-center mb-4 justify-between">
        <h2 class="text-2xl font-bold text-white mb-4">
          Block #<%= block_number %> - Error
        </h2>
      </div>
    </div>
  </div>

  <div class="bg-gradient-to-br from-red-900/30 to-orange-900/30 rounded-lg p-6 border border-red-500/30">
    <div class="flex items-center mb-4">
      <div class="bg-gradient-to-r from-red-500 to-orange-600 rounded-full p-2 mr-3">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-red-400">Block Not Available</h3>
    </div>
    
    <div class="text-gray-300 leading-relaxed space-y-4">
      <p><%= error_message %></p>
      <p class="text-sm text-gray-400">Please try again later or search for a different block.</p>
    </div>
  </div>
</div>