<div class="min-h-screen bg-[#0F172A]">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-6">
      <div class="inline-block mb-6 px-4 py-2 bg-yellow-500/10 rounded-full border border-yellow-500/20">
        <span class="text-yellow-400 font-semibold">Search Results</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight bg-clip-text text-transparent bg-gradient-to-r from-white via-yellow-100 to-white">
        Ethereum Blocks
      </h1>
      <% if @results && @results[:count] %>
        <p class="text-xl text-gray-300 mb-8">
          Found <%= @results[:count] %> block<%= @results[:count] != 1 ? 's' : '' %>
        </p>
      <% end %>
    </div>

    <% if @results && @results[:api_endpoint] %>
      <div class="mb-8 bg-[#1E293B]/80 backdrop-blur-sm rounded-lg border border-yellow-500/20 shadow-[0_0_30px_rgba(234,179,8,0.1)] overflow-hidden">
        <div class="px-6 py-4">
          <div class="flex items-center justify-between mb-3">
            <h3 class="text-lg font-semibold text-yellow-500 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
              </svg>
              API Endpoint
            </h3>
            <button class="text-yellow-400 hover:text-yellow-300 transition-colors" onclick="copyToClipboard('<%= @results[:api_endpoint] %>')">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </button>
          </div>
          <div class="bg-[#0F172A] rounded-lg p-4 border border-gray-800">
            <code class="text-yellow-300 text-sm font-mono break-all leading-relaxed">
              <%= @results[:api_endpoint] %>
            </code>
          </div>
        </div>
      </div>
    <% end %>

    <% if @results && @results[:blocks] && @results[:blocks].any? %>
      <div class="grid gap-6">
        <% @results[:blocks].each do |block| %>
          <div class="bg-[#1E293B]/80 backdrop-blur-sm rounded-lg p-6 text-white border border-yellow-500/20 shadow-[0_0_30px_rgba(234,179,8,0.1)] hover:transform hover:translate-y-[-4px] transition-all duration-300">
            <div class="flex flex-col lg:flex-row lg:justify-between lg:items-start mb-6">
              <div class="flex-1">
                <h2 class="text-2xl font-bold text-white mb-4">
                  Block #<%= block.is_a?(Hash) ? (block['block_number'] || block.dig('data', 'info', 'height')) : block %>
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 text-sm">
                  <div>
                    <span class="font-semibold text-yellow-400">Hash:</span>
                    <p class="text-gray-300 font-mono text-xs break-keep whitespace-nowrap overflow-hidden mt-1">
                      <%= block.is_a?(Hash) ? (block.dig('data', 'info', 'hash') || block['hash']) : nil || 'N/A' %>
                    </p>
                  </div>
                  <div>
                    <span class="font-semibold text-yellow-400">Timestamp:</span>
                    <p class="text-gray-300 mt-1">
                      <% timestamp = block.is_a?(Hash) ? (block.dig('data', 'info', 'timestamp') || block['timestamp']) : nil %>
                      <% if timestamp %>
                        <%= Time.parse(timestamp).strftime("%Y-%m-%d %H:%M:%S UTC") %>
                      <% else %>
                        N/A
                      <% end %>
                    </p>
                  </div>
                  <div>
                    <span class="font-semibold text-yellow-400">Miner:</span>
                    <p class="text-gray-300 font-mono text-xs break-keep whitespace-nowrap overflow-hidden mt-1">
                      <% miner_hash = block.is_a?(Hash) ? (block.dig('data', 'info', 'miner', 'hash') || block.dig('miner', 'hash')) : nil %>
                      <%= miner_hash || 'N/A' %>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-6 gap-4 mb-6">
              <div class="bg-gradient-to-br from-blue-600/20 to-blue-800/20 rounded-lg p-4 border border-blue-500/30">
                <div class="text-xs font-medium text-blue-400 uppercase tracking-wide mb-2">
                  Transactions
                </div>
                <div class="text-xl font-bold text-blue-300">
                  <%= block.is_a?(Hash) ? (block.dig('data', 'info', 'transactions_count') || block['transaction_count'] || 0) : 'N/A' %>
                </div>
              </div>
              
              <div class="bg-gradient-to-br from-emerald-600/20 to-emerald-800/20 rounded-lg p-4 border border-emerald-500/30">
                <div class="text-xs font-medium text-emerald-400 uppercase tracking-wide mb-2">
                  Gas Used
                </div>
                <div class="text-xl font-bold text-emerald-300">
                  <% gas_used = block.is_a?(Hash) ? (block.dig('data', 'info', 'gas_used') || block['gas_used']) : nil %>
                  <% if gas_used %>
                    <%= number_with_delimiter(gas_used) %>
                  <% else %>
                    N/A
                  <% end %>
                </div>
                <% gas_percentage = block.is_a?(Hash) ? (block.dig('data', 'info', 'gas_used_percentage') || block['gas_used_percentage']) : nil %>
                <% if gas_percentage %>
                  <div class="text-xs text-emerald-400 font-medium mt-1">
                    <%= sprintf("%.1f", gas_percentage) %>% used
                  </div>
                <% end %>
              </div>
              
              <div class="bg-gradient-to-br from-purple-600/20 to-purple-800/20 rounded-lg p-4 border border-purple-500/30">
                <div class="text-xs font-medium text-purple-400 uppercase tracking-wide mb-2">
                  Gas Limit
                </div>
                <div class="text-xl font-bold text-purple-300">
                  <% gas_limit = block.is_a?(Hash) ? (block.dig('data', 'info', 'gas_limit') || block['gas_limit']) : nil %>
                  <% if gas_limit %>
                    <%= number_with_delimiter(gas_limit) %>
                  <% else %>
                    N/A
                  <% end %>
                </div>
              </div>
              
              <div class="bg-gradient-to-br from-amber-600/20 to-amber-800/20 rounded-lg p-4 border border-amber-500/30">
                <div class="text-xs font-medium text-amber-400 uppercase tracking-wide mb-2">
                  ETH Transferred
                </div>
                <div class="text-xl font-bold text-amber-300">
                  <% 
                    # Calculate total ETH transferred from transactions
                    total_eth_transferred = 0
                    if block.is_a?(Hash) && block.dig('data', 'transactions', 'items')
                      block.dig('data', 'transactions', 'items').each do |tx|
                        value = tx['value'].to_f
                        total_eth_transferred += value if value > 0
                      end
                      total_eth_transferred = total_eth_transferred / 1e18
                    end
                  %>
                  <% if total_eth_transferred > 0 %>
                    <%= sprintf("%.2f", total_eth_transferred) %>
                  <% else %>
                    0.00
                  <% end %>
                </div>
                <div class="text-xs text-amber-400 font-medium mt-1">
                  ETH
                </div>
              </div>
              
              <div class="bg-gradient-to-br from-indigo-600/20 to-indigo-800/20 rounded-lg p-4 border border-indigo-500/30">
                <div class="text-xs font-medium text-indigo-400 uppercase tracking-wide mb-2">
                  Size
                </div>
                <div class="text-xl font-bold text-indigo-300">
                  <% size = block.is_a?(Hash) ? (block.dig('data', 'info', 'size') || block['size']) : nil %>
                  <% if size %>
                    <%= number_with_delimiter(size) %>
                  <% else %>
                    N/A
                  <% end %>
                </div>
                <div class="text-xs text-indigo-400 font-medium mt-1">
                  bytes
                </div>
              </div>
              
              <div class="bg-gradient-to-br from-pink-600/20 to-pink-800/20 rounded-lg p-4 border border-pink-500/30">
                <div class="text-xs font-medium text-pink-400 uppercase tracking-wide mb-2">
                  Priority Fee
                </div>
                <div class="text-xl font-bold text-pink-300">
                  <% priority_fee = block.is_a?(Hash) ? (block.dig('data', 'info', 'priority_fee')) : nil %>
                  <% if priority_fee %>
                    <%= sprintf("%.3f", priority_fee.to_f / 1e18) %>
                  <% else %>
                    0.000
                  <% end %>
                </div>
                <div class="text-xs text-pink-400 font-medium mt-1">
                  ETH
                </div>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
              <div>
                <span class="font-semibold text-yellow-400">Base Fee:</span>
                <span class="text-gray-300 ml-2">
                  <% base_fee = block.is_a?(Hash) ? (block.dig('data', 'info', 'base_fee_per_gas') || block['base_fee_per_gas']) : nil %>
                  <% if base_fee %>
                    <%= number_with_delimiter(base_fee) %> gwei
                  <% else %>
                    N/A
                  <% end %>
                </span>
              </div>
              
              <div>
                <span class="font-semibold text-yellow-400">Transaction Fees:</span>
                <span class="text-gray-300 ml-2">
                  <% tx_fees = block.is_a?(Hash) ? (block.dig('data', 'info', 'transaction_fees') || block['transaction_fees']) : nil %>
                  <% if tx_fees %>
                    <%= sprintf("%.4f", tx_fees.to_f / 1e18) %> ETH
                  <% else %>
                    N/A
                  <% end %>
                </span>
              </div>
              
              <div>
                <span class="font-semibold text-yellow-400">Burnt Fees:</span>
                <span class="text-gray-300 ml-2">
                  <% burnt_fees = block.is_a?(Hash) ? (block.dig('data', 'info', 'burnt_fees') || block['burnt_fees']) : nil %>
                  <% if burnt_fees %>
                    <%= sprintf("%.4f", burnt_fees.to_f / 1e18) %> ETH
                  <% else %>
                    N/A
                  <% end %>
                </span>
              </div>
              
              <div>
                <span class="font-semibold text-yellow-400">Internal Txs:</span>
                <span class="text-gray-300 ml-2">
                  <%= block.is_a?(Hash) ? (block.dig('data', 'info', 'internal_transactions_count') || 0) : 'N/A' %>
                </span>
              </div>
            </div>

            <% if block.is_a?(Hash) %>
              <% withdrawals_count = block.dig('data', 'info', 'withdrawals_count').to_i %>
              <% withdrawals_items_count = block.dig('data', 'withdrawals', 'items')&.length || 0 %>
              <% if withdrawals_count > 0 %>
                <div class="mt-6 pt-4 border-t border-gray-700">
                  <span class="font-semibold text-yellow-400">Withdrawals:</span>
                  <span class="text-gray-300 ml-2">
                    <% if withdrawals_items_count > 0 %>
                      <%= withdrawals_items_count %> of <%= withdrawals_count %> withdrawals
                    <% else %>
                      <%= withdrawals_count %> withdrawals (not loaded)
                    <% end %>
                  </span>
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>

      <% if @results[:parameters_used] %>
        <div class="mt-8 bg-[#1E293B]/80 backdrop-blur-sm rounded-lg p-6 border border-yellow-500/20 shadow-[0_0_30px_rgba(234,179,8,0.1)]">
          <h3 class="font-semibold text-yellow-500 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
            </svg>
            Search Parameters Used
          </h3>
          <div class="flex flex-wrap gap-3">
            <% @results[:parameters_used].each do |key, value| %>
              <span class="inline-flex items-center bg-gradient-to-r from-yellow-500/20 to-red-500/20 border border-yellow-500/30 text-yellow-300 rounded-full px-4 py-2 text-sm font-medium">
                <span class="font-semibold"><%= key.to_s.humanize %>:</span>
                <span class="ml-2 text-white"><%= value %></span>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <div class="bg-[#1E293B]/80 backdrop-blur-sm rounded-lg p-8 border border-yellow-500/20 shadow-[0_0_30px_rgba(234,179,8,0.1)]">
          <svg class="mx-auto h-16 w-16 mb-4 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="text-xl font-semibold text-white mb-3">No blocks found</h3>
          <p class="text-gray-300">Try adjusting your search parameters to find relevant blocks.</p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
function copyToClipboard(text) {
  navigator.clipboard.writeText(text).then(function() {
    // Show a temporary success message
    const button = event.target.closest('button');
    const originalHTML = button.innerHTML;
    button.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>';
    setTimeout(() => {
      button.innerHTML = originalHTML;
    }, 2000);
  });
}
</script>