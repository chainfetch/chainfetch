<div id="transaction_<%= transaction.is_a?(Hash) ? (transaction['transaction_hash'] || transaction.dig('data', 'info', 'hash')) : transaction %>" data-controller="transaction" class="bg-[#1E293B]/80 backdrop-blur-sm rounded-lg p-6 text-white border border-yellow-500/20 shadow-[0_0_30px_rgba(234,179,8,0.1)] hover:transform hover:translate-y-[-4px] transition-all duration-300">
  <div class="flex flex-col lg:flex-row lg:justify-between lg:items-start mb-6">
    <div class="flex-1">
      <div class="flex items-center mb-4 justify-between">
        <h2 class="text-2xl font-bold text-white mb-4">
          <% tx_hash = transaction.is_a?(Hash) ? (transaction['transaction_hash'] || transaction.dig('data', 'info', 'hash')) : transaction %>
          Transaction <%= tx_hash.to_s[0..9] %>...
        </h2>
        <button 
          data-action="click->transaction#toggleSummary"
          data-transaction-hash="<%= tx_hash %>"
          class="bg-gradient-to-r from-yellow-500 to-amber-600 hover:from-yellow-600 hover:to-amber-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center gap-2 cursor-pointer">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          AI Summary
        </button>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 text-sm">
        <div>
          <span class="font-semibold text-yellow-400">Hash:</span>
          <p class="text-gray-300 font-mono text-xs break-keep whitespace-nowrap overflow-hidden mt-1">
            <%= tx_hash || 'N/A' %>
          </p>
        </div>
        <div>
          <span class="font-semibold text-yellow-400">Timestamp:</span>
          <p class="text-gray-300 mt-1">
            <% timestamp = transaction.dig('data', 'info', 'timestamp') %>
            <% if timestamp %>
              <%= Time.parse(timestamp).strftime("%Y-%m-%d %H:%M:%S UTC") %>
            <% else %>
              N/A
            <% end %>
          </p>
        </div>
        <div>
          <span class="font-semibold text-yellow-400">Status:</span>
          <p class="text-gray-300 mt-1">
            <% status = transaction.dig('data', 'info', 'result') %>
            <% if status %>
              <span class="<%= status == 'success' || status == 'ok' ? 'text-green-400' : 'text-red-400' %>">
                <%= status.capitalize %>
              </span>
            <% else %>
              N/A
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-6 gap-4 mb-6">
    <div class="bg-gradient-to-br from-blue-600/20 to-blue-800/20 rounded-lg p-4 border border-blue-500/30">
      <div class="text-xs font-medium text-blue-400 uppercase tracking-wide mb-2">
        Value
      </div>
      <div class="text-xl font-bold text-blue-300">
        <% value = transaction.dig('data', 'info', 'value') %>
        <% if value %>
          <%= sprintf("%.6f", value.to_f / 1e18) %>
        <% else %>
          0.000000
        <% end %>
      </div>
      <div class="text-xs text-blue-400 font-medium mt-1">
        ETH
      </div>
    </div>
    
    <div class="bg-gradient-to-br from-emerald-600/20 to-emerald-800/20 rounded-lg p-4 border border-emerald-500/30">
      <div class="text-xs font-medium text-emerald-400 uppercase tracking-wide mb-2">
        Gas Used
      </div>
      <div class="text-xl font-bold text-emerald-300">
        <% gas_used = transaction.dig('data', 'info', 'gas_used') %>
        <% if gas_used %>
          <%= number_with_delimiter(gas_used) %>
        <% else %>
          N/A
        <% end %>
      </div>
      <% gas_limit = transaction.dig('data', 'info', 'gas_limit') %>
      <% if gas_used && gas_limit && gas_limit.to_f > 0 %>
        <div class="text-xs text-emerald-400 font-medium mt-1">
          <%= sprintf("%.1f", (gas_used.to_f / gas_limit.to_f) * 100) %>% of limit
        </div>
      <% end %>
    </div>
    
    <div class="bg-gradient-to-br from-purple-600/20 to-purple-800/20 rounded-lg p-4 border border-purple-500/30">
      <div class="text-xs font-medium text-purple-400 uppercase tracking-wide mb-2">
        Gas Limit
      </div>
      <div class="text-xl font-bold text-purple-300">
        <% if gas_limit %>
          <%= number_with_delimiter(gas_limit) %>
        <% else %>
          N/A
        <% end %>
      </div>
    </div>
    
    <div class="bg-gradient-to-br from-amber-600/20 to-amber-800/20 rounded-lg p-4 border border-amber-500/30">
      <div class="text-xs font-medium text-amber-400 uppercase tracking-wide mb-2">
        Gas Price
      </div>
      <div class="text-xl font-bold text-amber-300">
        <% gas_price = transaction.dig('data', 'info', 'gas_price') %>
        <% if gas_price %>
          <%= sprintf("%.2f", gas_price.to_f / 1e9) %>
        <% else %>
          N/A
        <% end %>
      </div>
      <div class="text-xs text-amber-400 font-medium mt-1">
        gwei
      </div>
    </div>
    
    <div class="bg-gradient-to-br from-indigo-600/20 to-indigo-800/20 rounded-lg p-4 border border-indigo-500/30">
      <div class="text-xs font-medium text-indigo-400 uppercase tracking-wide mb-2">
        Priority Fee
      </div>
      <div class="text-xl font-bold text-indigo-300">
        <% priority_fee = transaction.dig('data', 'info', 'priority_fee') %>
        <% if priority_fee %>
          <%= sprintf("%.6f", priority_fee.to_f / 1e18) %>
        <% else %>
          0.000000
        <% end %>
      </div>
      <div class="text-xs text-indigo-400 font-medium mt-1">
        ETH
      </div>
    </div>
    
    <div class="bg-gradient-to-br from-pink-600/20 to-pink-800/20 rounded-lg p-4 border border-pink-500/30">
      <div class="text-xs font-medium text-pink-400 uppercase tracking-wide mb-2">
        Confirmations
      </div>
      <div class="text-xl font-bold text-pink-300">
        <%= transaction.dig('data', 'info', 'confirmations') || 'N/A' %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm mb-6">
    <div>
      <span class="font-semibold text-yellow-400">From:</span>
      <div class="text-gray-300 ml-2 mt-1">
        <% from_info = transaction.dig('data', 'info', 'from') %>
        <% if from_info %>
          <p class="font-mono text-xs break-keep whitespace-nowrap overflow-hidden">
            <%= from_info['hash'] || 'N/A' %>
          </p>
          <% if from_info['name'] || from_info['ens_domain_name'] %>
            <p class="text-sm text-blue-400 mt-1">
              <%= from_info['name'] || from_info['ens_domain_name'] %>
            </p>
          <% end %>
          <div class="flex gap-2 mt-1">
            <% if from_info['is_scam'] %>
              <span class="inline-block px-2 py-1 bg-red-600/20 text-red-400 rounded-full text-xs">
                Potential Scam
              </span>
            <% end %>
            <% if from_info['is_verified'] %>
              <span class="inline-block px-2 py-1 bg-green-600/20 text-green-400 rounded-full text-xs">
                Verified
              </span>
            <% end %>
            <% if from_info['is_contract'] %>
              <span class="inline-block px-2 py-1 bg-purple-600/20 text-purple-400 rounded-full text-xs">
                Contract
              </span>
            <% end %>
          </div>
        <% else %>
          N/A
        <% end %>
      </div>
    </div>
    
    <div>
      <span class="font-semibold text-yellow-400">To:</span>
      <div class="text-gray-300 ml-2 mt-1">
        <% to_info = transaction.dig('data', 'info', 'to') %>
        <% if to_info %>
          <p class="font-mono text-xs break-keep whitespace-nowrap overflow-hidden">
            <%= to_info['hash'] || 'N/A' %>
          </p>
          <% if to_info['name'] || to_info['ens_domain_name'] %>
            <p class="text-sm text-blue-400 mt-1">
              <%= to_info['name'] || to_info['ens_domain_name'] %>
            </p>
          <% end %>
          <div class="flex gap-2 mt-1">
            <% if to_info['is_scam'] %>
              <span class="inline-block px-2 py-1 bg-red-600/20 text-red-400 rounded-full text-xs">
                Potential Scam
              </span>
            <% end %>
            <% if to_info['is_verified'] %>
              <span class="inline-block px-2 py-1 bg-green-600/20 text-green-400 rounded-full text-xs">
                Verified
              </span>
            <% end %>
            <% if to_info['is_contract'] %>
              <span class="inline-block px-2 py-1 bg-purple-600/20 text-purple-400 rounded-full text-xs">
                Contract
              </span>
            <% end %>
          </div>
        <% else %>
          N/A
        <% end %>
      </div>
    </div>
    
    <div>
      <span class="font-semibold text-yellow-400">Transaction Fee:</span>
      <span class="text-gray-300 ml-2">
        <% fee = transaction.dig('data', 'info', 'fee', 'value') %>
        <% if fee %>
          <%= sprintf("%.6f", fee.to_f / 1e18) %> ETH
        <% else %>
          N/A
        <% end %>
      </span>
    </div>
    
    <div>
      <span class="font-semibold text-yellow-400">Block Number:</span>
      <span class="text-gray-300 ml-2">
        <%= transaction.dig('data', 'info', 'block_number') || 'N/A' %>
      </span>
    </div>

    <div>
      <span class="font-semibold text-yellow-400">Position:</span>
      <span class="text-gray-300 ml-2">
        <%= transaction.dig('data', 'info', 'position') || 'N/A' %>
      </span>
    </div>
    
    <div>
      <span class="font-semibold text-yellow-400">Transaction Type:</span>
      <span class="text-gray-300 ml-2">
        <%= transaction.dig('data', 'info', 'type') || 'N/A' %>
      </span>
    </div>
  </div>

  <% method = transaction.dig('data', 'info', 'method') %>
  <% transaction_tag = transaction.dig('data', 'info', 'transaction_tag') %>
  <% if method || transaction_tag %>
    <div class="mt-6 pt-4 border-t border-gray-700">
      <% if method %>
        <div class="mb-2">
          <span class="font-semibold text-yellow-400">Method:</span>
          <span class="text-gray-300 ml-2"><%= method %></span>
        </div>
      <% end %>
      <% if transaction_tag %>
        <div class="mb-2">
          <span class="font-semibold text-yellow-400">Tag:</span>
          <span class="text-gray-300 ml-2 px-2 py-1 bg-blue-600/20 rounded-full text-sm">
            <%= transaction_tag %>
          </span>
        </div>
      <% end %>
    </div>
  <% end %>

  <% token_transfers = transaction.dig('data', 'token_transfers', 'items') || transaction.dig('data', 'info', 'token_transfers') %>
  <% if token_transfers && token_transfers.any? %>
    <div class="mt-6 pt-4 border-t border-gray-700">
      <h4 class="font-semibold text-yellow-400 mb-3">Token Transfers (<%= token_transfers.length %>)</h4>
      <div class="<%= token_transfers.length > 3 ? 'max-h-96 overflow-y-auto' : '' %> space-y-3">
        <% token_transfers.each do |transfer| %>
          <div class="bg-[#0F172A]/50 rounded-lg p-4 border border-gray-800">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 text-sm">
              <div>
                <span class="font-semibold text-blue-400">Token:</span>
                <p class="text-gray-300 mt-1">
                  <%= transfer.dig('token', 'name') || 'Unknown Token' %>
                  <span class="text-blue-400">(<%= transfer.dig('token', 'symbol') || 'N/A' %>)</span>
                </p>
              </div>
              <div>
                <span class="font-semibold text-green-400">Amount:</span>
                <p class="text-gray-300 mt-1">
                  <% amount = transfer.dig('total', 'value') %>
                  <% decimals = transfer.dig('token', 'decimals') || transfer.dig('total', 'decimals') %>
                  <% if amount && decimals %>
                    <%= sprintf("%.6f", amount.to_f / (10 ** decimals.to_i)) %>
                  <% else %>
                    N/A
                  <% end %>
                </p>
              </div>
              <div>
                <span class="font-semibold text-purple-400">From:</span>
                <p class="text-gray-300 font-mono text-xs mt-1">
                  <%= transfer.dig('from', 'hash').to_s[0..9] %>...
                </p>
              </div>
              <div>
                <span class="font-semibold text-orange-400">To:</span>
                <p class="text-gray-300 font-mono text-xs mt-1">
                  <%= transfer.dig('to', 'hash').to_s[0..9] %>...
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>