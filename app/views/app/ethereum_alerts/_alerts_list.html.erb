<div id="ethereum_alerts_list">
  <% if @ethereum_alerts.any? %>
    <div class="bg-[#1E293B]/80 backdrop-blur-sm rounded-lg border border-yellow-500/20 shadow-[0_0_30px_rgba(234,179,8,0.1)] overflow-hidden">
      <!-- Table Header -->
      <div class="bg-[#0F172A]/50 px-6 py-4 border-b border-yellow-500/20">
        <div class="flex items-center text-yellow-500">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-3">
            <path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"/>
            <path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"/>
          </svg>
          <span class="font-semibold">Ethereum Alerts (<%= @ethereum_alerts.count %>)</span>
        </div>
      </div>

      <!-- Table -->
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-[#0F172A]/30">
            <tr>
              <th class="text-left px-6 py-4 text-sm font-semibold text-gray-300">Address</th>
              <th class="text-left px-6 py-4 text-sm font-semibold text-gray-300">Webhook URL</th>
              <th class="text-left px-6 py-4 text-sm font-semibold text-gray-300">Status</th>
              <th class="text-left px-6 py-4 text-sm font-semibold text-gray-300">Created</th>
              <th class="text-left px-6 py-4 text-sm font-semibold text-gray-300">Last Triggered</th>
              <th class="text-right px-6 py-4 text-sm font-semibold text-gray-300">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-800/50">
            <% @ethereum_alerts.each do |alert| %>
              <tr class="hover:bg-[#0F172A]/30 transition-colors" id="alert_<%= alert.id %>">
                <!-- Address -->
                <td class="px-6 py-4">
                  <div class="max-w-xs">
                    <p class="text-sm font-mono text-yellow-300 truncate" title="<%= alert.address_hash %>">
                      <%= alert.address_hash %>
                    </p>
                  </div>
                </td>
                
                <!-- Webhook URL -->
                <td class="px-6 py-4">
                  <div class="max-w-xs">
                    <p class="text-sm text-gray-200 truncate" title="<%= alert.webhook_url %>">
                      <%= alert.webhook_url %>
                    </p>
                  </div>
                </td>
                
                <!-- Status -->
                <td class="px-6 py-4">
                  <span class="px-3 py-1 rounded-full text-xs font-medium <%= alert.active? ? 'bg-green-500/20 text-green-400 border border-green-500/30' : 'bg-gray-500/20 text-gray-400 border border-gray-500/30' %>">
                    <%= alert.status.humanize %>
                  </span>
                </td>
                
                <!-- Created -->
                <td class="px-6 py-4">
                  <p class="text-sm text-gray-400">
                    <%= alert.created_at.strftime("%b %d, %Y") %>
                  </p>
                </td>
                
                <!-- Last Triggered -->
                <td class="px-6 py-4">
                  <p class="text-sm text-gray-400">
                    <% if alert.last_triggered_at %>
                      <%= alert.last_triggered_at.strftime("%b %d, %Y") %>
                    <% else %>
                      Never
                    <% end %>
                  </p>
                </td>
                
                <!-- Actions -->
                <td class="px-6 py-4">
                  <div class="flex items-center justify-end space-x-2">
                    <%= link_to app_ethereum_alert_path(alert), 
                        class: "bg-gray-700/50 hover:bg-gray-600/50 text-white px-3 py-1.5 rounded text-xs font-medium transition-all duration-200",
                        data: { turbo_frame: "alert_details" } do %>
                      View
                    <% end %>
                    
                    <%= link_to edit_app_ethereum_alert_path(alert), 
                        class: "bg-gradient-to-r from-yellow-500 to-red-500 hover:from-yellow-600 hover:to-red-600 text-white px-3 py-1.5 rounded text-xs font-medium transition-all duration-200",
                        data: { turbo_frame: "alert_form" } do %>
                      Edit
                    <% end %>
                    
                    <%= button_to app_ethereum_alert_path(alert), 
                        method: :delete,
                        class: "bg-gray-700/50 hover:bg-gray-600/50 text-white px-3 py-1.5 rounded text-xs font-medium transition-all duration-200",
                        data: { 
                          turbo_confirm: "Are you sure you want to delete this alert?"
                        } do %>
                      Delete
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <!-- Enhanced Empty State -->
    <div class="bg-[#1E293B]/80 backdrop-blur-sm rounded-lg p-12 text-white border border-yellow-500/20 shadow-[0_0_30px_rgba(234,179,8,0.1)] text-center">
      <!-- Content -->
      <div class="relative z-10">
        <!-- Text Content -->
        <div class="space-y-8 mb-16 mt-8 px-4">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-300 mx-auto">
            <path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"/>
            <path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"/>
          </svg>
          
          <p class="text-xl text-gray-300 max-w-2xl mx-auto leading-relaxed px-4 mt-6">
            Get instant notifications when transactions happen on addresses you care about. 
            <span class="text-yellow-400 font-medium">Real-time monitoring</span> with 
            <span class="text-red-400 font-medium">webhook alerts</span> for seamless integration.
          </p>
        </div>
        
        <!-- Features Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-16 max-w-5xl mx-auto px-4">
          <div class="bg-slate-700/30 rounded-xl p-6 border border-slate-600/50 backdrop-blur-sm hover:border-yellow-500/30 transition-colors">
            <div class="w-12 h-12 bg-yellow-500/20 rounded-lg flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-400">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 6v6l4 2"/>
              </svg>
            </div>
            <h4 class="text-white font-semibold mb-2">Real-time Alerts</h4>
            <p class="text-sm text-gray-400">Instant notifications when transactions occur</p>
          </div>
          
          <div class="bg-slate-700/30 rounded-xl p-6 border border-slate-600/50 backdrop-blur-sm hover:border-blue-500/30 transition-colors">
            <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-400">
                <path d="M9 12l2 2 4-4"/>
                <path d="M21 12c-1 0-3-1-3-3s2-3 3-3 3 1 3 3-2 3-3 3"/>
                <path d="M3 12c1 0 3-1 3-3s-2-3-3-3-3 1-3 3 2 3 3 3"/>
                <path d="M13 12h3c0 1 1 2 1 2s1-1 1-2h-5"/>
              </svg>
            </div>
            <h4 class="text-white font-semibold mb-2">Webhook Integration</h4>
            <p class="text-sm text-gray-400">Connect with your existing systems seamlessly</p>
          </div>
          
          <div class="bg-slate-700/30 rounded-xl p-6 border border-slate-600/50 backdrop-blur-sm hover:border-green-500/30 transition-colors">
            <div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
              </svg>
            </div>
            <h4 class="text-white font-semibold mb-2">Reliable Monitoring</h4>
            <p class="text-sm text-gray-400">99.9% uptime with enterprise-grade infrastructure</p>
          </div>
        </div>
        
        <!-- CTA Button -->
        <div class="px-4 mb-8 text-center">
          <%= link_to new_app_ethereum_alert_path, 
              class: "bg-gradient-to-r from-yellow-500 to-red-500 hover:from-yellow-600 hover:to-red-600 text-white px-8 py-4 rounded-xl font-semibold transition-all duration-200 inline-flex items-center space-x-3 shadow-2xl hover:shadow-yellow-500/25 hover:scale-105 transform",
              data: { turbo_frame: "alert_form" } do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 5v14M5 12h14"/>
            </svg>
            <span>Create Your First Alert</span>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>